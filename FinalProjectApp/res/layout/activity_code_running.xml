<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodeRunningActivity" >

    <LinearLayout
        android:id="@+id/LinearLayout_Running"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/LinearLayout_Running_Screen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.89"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LinearLayout_Running2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1" >

                <LinearLayout
                    android:id="@+id/LinearLayout_Running_Code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical" >

                    <ListView
                        android:id="@+id/listView_Running_Code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="1dp" >
                    </ListView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout_Running_Game"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_Running_Watch"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.11"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_prevSnapshot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="&lt;" />

            <Button
                android:id="@+id/button_nextSnapshot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text=">" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>